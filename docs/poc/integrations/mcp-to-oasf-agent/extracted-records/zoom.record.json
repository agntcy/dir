{
    "name": "zoom/zoom-mcp-server",
    "version": "1.0.0",
    "description": "Official Zoom MCP server that provides access to Zoom video conferencing, meetings, webinars, and Zoom Room management.",
    "authors": [
        "Zoom Video Communications, Inc. <developer@zoom.us>"
    ],
    "created_at": "2023-10-30T09:25:00Z",
    "skills": [
        {
            "category_name": "Natural Language Processing",
            "category_uid": 1,
            "class_name": "Text Completion",
            "class_uid": 10201
        },
        {
            "category_name": "Natural Language Processing",
            "category_uid": 1,
            "class_name": "Question Answering",
            "class_uid": 10302
        },
        {
            "category_name": "Natural Language Processing",
            "category_uid": 1,
            "class_name": "Dialogue Generation",
            "class_uid": 10204
        }
    ],
    "locators": [
        {
            "type": "source-code",
            "url": "https://github.com/zoom/zoom-mcp-server"
        }
    ],
    "extensions": [
        {
            "name": "schema.oasf.agntcy.org/features/runtime/mcp",
            "version": "v1.0.0",
            "data": {
                "servers": {
                    "zoom": {
                        "command": "docker",
                        "args": [
                            "run",
                            "-i",
                            "--rm",
                            "-e",
                            "ZOOM_API_KEY",
                            "-e",
                            "ZOOM_API_SECRET",
                            "-e",
                            "ZOOM_ACCOUNT_ID",
                            "ghcr.io/zoom/zoom-mcp-server"
                        ],
                        "env": {
                            "ZOOM_API_KEY": "${input:ZOOM_API_KEY}",
                            "ZOOM_API_SECRET": "${input:ZOOM_API_SECRET}",
                            "ZOOM_ACCOUNT_ID": "${input:ZOOM_ACCOUNT_ID}"
                        }
                    }
                }
            }
        },
        {
            "name": "schema.oasf.agntcy.org/features/runtime/prompt",
            "version": "v1.0.0",
            "data": {
                "prompts": [
                    {
                        "name": "Zoom Meetings Assistant",
                        "description": "Zoom video conferencing assistant",
                        "prompt": "You are a Zoom assistant. Help users schedule and manage meetings, webinars, and other Zoom video conferencing features."
                    }
                ]
            }
        }
    ]
}
