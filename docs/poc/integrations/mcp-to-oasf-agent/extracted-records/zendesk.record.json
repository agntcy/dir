{
    "name": "zendesk/zendesk-mcp-server",
    "version": "1.0.0",
    "description": "Official Zendesk MCP server that provides access to Zendesk Support, Chat, Guide, and other customer service platform features.",
    "authors": [
        "Zendesk, Inc. <support@zendesk.com>"
    ],
    "created_at": "2023-11-10T10:50:00Z",
    "skills": [
        {
            "category_name": "Natural Language Processing",
            "category_uid": 1,
            "class_name": "Text Completion",
            "class_uid": 10201
        },
        {
            "category_name": "Natural Language Processing",
            "category_uid": 1,
            "class_name": "Dialogue Generation",
            "class_uid": 10204
        },
        {
            "category_name": "Natural Language Processing",
            "category_uid": 1,
            "class_name": "Question Answering",
            "class_uid": 10302
        }
    ],
    "locators": [
        {
            "type": "source-code",
            "url": "https://github.com/zendesk/zendesk-mcp-server"
        }
    ],
    "extensions": [
        {
            "name": "schema.oasf.agntcy.org/features/runtime/mcp",
            "version": "v1.0.0",
            "data": {
                "servers": {
                    "zendesk": {
                        "command": "docker",
                        "args": [
                            "run",
                            "-i",
                            "--rm",
                            "-e",
                            "ZENDESK_EMAIL",
                            "-e",
                            "ZENDESK_API_TOKEN",
                            "-e",
                            "ZENDESK_SUBDOMAIN",
                            "ghcr.io/zendesk/zendesk-mcp-server"
                        ],
                        "env": {
                            "ZENDESK_EMAIL": "${input:ZENDESK_EMAIL}",
                            "ZENDESK_API_TOKEN": "${input:ZENDESK_API_TOKEN}",
                            "ZENDESK_SUBDOMAIN": "${input:ZENDESK_SUBDOMAIN}"
                        }
                    }
                }
            }
        },
        {
            "name": "schema.oasf.agntcy.org/features/runtime/prompt",
            "version": "v1.0.0",
            "data": {
                "prompts": [
                    {
                        "name": "Zendesk Support Assistant",
                        "description": "Zendesk customer support assistant",
                        "prompt": "You are a Zendesk assistant. Help users manage support tickets, customer interactions, and other Zendesk customer service features."
                    }
                ]
            }
        }
    ]
}
