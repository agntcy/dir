{
    "name": "trello/trello-mcp-server",
    "version": "1.0.0",
    "description": "Official Trello MCP server that provides access to Trello boards, cards, lists, and other project management features.",
    "authors": [
        "Atlassian Pty Ltd <support@trello.com>"
    ],
    "created_at": "2023-10-28T15:45:00Z",
    "skills": [
        {
            "category_name": "Natural Language Processing",
            "category_uid": 1,
            "class_name": "Text Completion",
            "class_uid": 10201
        },
        {
            "category_name": "Natural Language Processing",
            "category_uid": 1,
            "class_name": "Question Answering",
            "class_uid": 10302
        },
        {
            "category_name": "Natural Language Processing",
            "category_uid": 1,
            "class_name": "Information Retrieval and Synthesis",
            "class_uid": 103
        }
    ],
    "locators": [
        {
            "type": "source-code",
            "url": "https://github.com/trello/trello-mcp-server"
        }
    ],
    "extensions": [
        {
            "name": "schema.oasf.agntcy.org/features/runtime/mcp",
            "version": "v1.0.0",
            "data": {
                "servers": {
                    "trello": {
                        "command": "docker",
                        "args": [
                            "run",
                            "-i",
                            "--rm",
                            "-e",
                            "TRELLO_API_KEY",
                            "-e",
                            "TRELLO_API_TOKEN",
                            "ghcr.io/trello/trello-mcp-server"
                        ],
                        "env": {
                            "TRELLO_API_KEY": "${input:TRELLO_API_KEY}",
                            "TRELLO_API_TOKEN": "${input:TRELLO_API_TOKEN}"
                        }
                    }
                }
            }
        },
        {
            "name": "schema.oasf.agntcy.org/features/runtime/prompt",
            "version": "v1.0.0",
            "data": {
                "prompts": [
                    {
                        "name": "Trello Board Assistant",
                        "description": "Trello project management assistant",
                        "prompt": "You are a Trello assistant. Help users manage boards, cards, lists, and organize projects in their Trello workspace."
                    }
                ]
            }
        }
    ]
}
