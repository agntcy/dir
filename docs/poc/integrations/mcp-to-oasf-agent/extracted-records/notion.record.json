{
    "name": "makenotion/notion-mcp-server",
    "version": "1.0.0",
    "description": "Official Notion MCP server that provides access to Notion documents, databases, pages, and workspace management.",
    "authors": [
        "Notion Labs, Inc. <team@notion.so>"
    ],
    "created_at": "2023-12-01T14:10:00Z",
    "skills": [
        {
            "category_name": "Natural Language Processing",
            "category_uid": 1,
            "class_name": "Text Completion",
            "class_uid": 10201
        },
        {
            "category_name": "Natural Language Processing",
            "category_uid": 1,
            "class_name": "Text Summarization",
            "class_uid": 10202
        },
        {
            "category_name": "Natural Language Processing",
            "category_uid": 1,
            "class_name": "Information Retrieval and Synthesis",
            "class_uid": 103
        }
    ],
    "locators": [
        {
            "type": "source-code",
            "url": "https://github.com/makenotion/notion-mcp-server"
        }
    ],
    "extensions": [
        {
            "name": "schema.oasf.agntcy.org/features/runtime/mcp",
            "version": "v1.0.0",
            "data": {
                "servers": {
                    "notion": {
                        "command": "docker",
                        "args": [
                            "run",
                            "-i",
                            "--rm",
                            "-e",
                            "NOTION_API_KEY",
                            "ghcr.io/makenotion/notion-mcp-server"
                        ],
                        "env": {
                            "NOTION_API_KEY": "${input:NOTION_API_KEY}"
                        }
                    }
                }
            }
        },
        {
            "name": "schema.oasf.agntcy.org/features/runtime/prompt",
            "version": "v1.0.0",
            "data": {
                "prompts": [
                    {
                        "name": "Notion Workspace Assistant",
                        "description": "Notion workspace assistant",
                        "prompt": "You are a Notion assistant. Help users create and manage pages, databases, and organize information in their Notion workspace."
                    }
                ]
            }
        }
    ]
}
