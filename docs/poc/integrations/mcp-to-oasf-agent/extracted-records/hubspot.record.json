    ],
    "locators": [
        {
            "type": "source-code",
            "url": "https://github.com/hubspot/hubspot-mcp-server"
        }
    ],
    "extensions": [
        {
            "name": "schema.oasf.agntcy.org/features/runtime/mcp",
            "version": "v1.0.0",
            "data": {
                "servers": {
                    "hubspot": {
                        "command": "docker",
                        "args": [
                            "run",
                            "-i",
                            "--rm",
                            "-e",
                            "HUBSPOT_API_KEY",
                            "ghcr.io/hubspot/hubspot-mcp-server"
                        ],
                        "env": {
                            "HUBSPOT_API_KEY": "${input:HUBSPOT_API_KEY}"
                        }
                    }
                }
            }
        },
        {
            "name": "schema.oasf.agntcy.org/features/runtime/prompt",
            "version": "v1.0.0",
            "data": {
                "prompts": [
                    {
                        "name": "HubSpot CRM Assistant",
                        "description": "HubSpot CRM and marketing assistant",
                        "prompt": "You are a HubSpot assistant. Help users manage contacts, deals, marketing campaigns, and other HubSpot platform features."
                    }
                ]
            }
        }
    ]
}
