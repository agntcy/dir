    "description": "Official HubSpot MCP server that provides access to HubSpot CRM, marketing, sales, service, and content management tools.",
    "authors": [
        "HubSpot, Inc. <support@hubspot.com>"
    ],
    "created_at": "2023-10-18T11:35:00Z",
    "skills": [
        {
            "category_name": "Natural Language Processing",
            "category_uid": 1,
            "class_name": "Text Completion",
            "class_uid": 10201
        },
        {
            "category_name": "Natural Language Processing",
            "category_uid": 1,
            "class_name": "Question Answering",
