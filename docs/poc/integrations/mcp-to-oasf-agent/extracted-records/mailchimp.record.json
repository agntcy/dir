{
    "name": "mailchimp/mailchimp-mcp-server",
    "version": "1.0.0",
    "description": "Official Mailchimp MCP server that provides access to Mailchimp email marketing, campaigns, audiences, and automation tools.",
    "authors": [
        "Intuit Inc. <support@mailchimp.com>"
    ],
    "created_at": "2023-11-12T10:30:00Z",
    "skills": [
        {
            "category_name": "Natural Language Processing",
            "category_uid": 1,
            "class_name": "Text Completion",
            "class_uid": 10201
        },
        {
            "category_name": "Natural Language Processing",
            "category_uid": 1,
            "class_name": "Question Answering",
            "class_uid": 10302
        },
        {
            "category_name": "Natural Language Processing",
            "category_uid": 1,
            "class_name": "Information Retrieval and Synthesis",
            "class_uid": 103
        }
    ],
    "locators": [
        {
            "type": "source-code",
            "url": "https://github.com/mailchimp/mailchimp-mcp-server"
        }
    ],
    "extensions": [
        {
            "name": "schema.oasf.agntcy.org/features/runtime/mcp",
            "version": "v1.0.0",
            "data": {
                "servers": {
                    "mailchimp": {
                        "command": "docker",
                        "args": [
                            "run",
                            "-i",
                            "--rm",
                            "-e",
                            "MAILCHIMP_API_KEY",
                            "-e",
                            "MAILCHIMP_SERVER_PREFIX",
                            "ghcr.io/mailchimp/mailchimp-mcp-server"
                        ],
                        "env": {
                            "MAILCHIMP_API_KEY": "${input:MAILCHIMP_API_KEY}",
                            "MAILCHIMP_SERVER_PREFIX": "${input:MAILCHIMP_SERVER_PREFIX}"
                        }
                    }
                }
            }
        },
        {
            "name": "schema.oasf.agntcy.org/features/runtime/prompt",
            "version": "v1.0.0",
            "data": {
                "prompts": [
                    {
                        "name": "Mailchimp Marketing Assistant",
                        "description": "Mailchimp email marketing assistant",
                        "prompt": "You are a Mailchimp assistant. Help users create and manage email campaigns, audience lists, and marketing automation."
                    }
                ]
            }
        }
    ]
}
