            "name": "schema.oasf.agntcy.org/features/runtime/mcp",
            "version": "v1.0.0",
            "data": {
                "servers": {
                    "linear": {
                        "command": "docker",
                        "args": [
                            "run",
                            "-i",
                            "--rm",
                            "-e",
                            "LINEAR_API_KEY",
                            "ghcr.io/linear/linear-mcp-server"
                        ],
                        "env": {
                            "LINEAR_API_KEY": "${input:LINEAR_API_KEY}"
                        }
                    }
                }
            }
        },
        {
            "name": "schema.oasf.agntcy.org/features/runtime/prompt",
            "version": "v1.0.0",
            "data": {
                "prompts": [
                    {
                        "name": "Linear Project Assistant",
                        "description": "Linear issue tracking assistant",
                        "prompt": "You are a Linear assistant. Help users manage issues, track projects, and coordinate development workflows."
                    }
                ]
            }
        }
    ]
