{
    "name": "salesforce-mcp/salesforce-mcp-server",
    "version": "1.0.0",
    "description": "Official Salesforce MCP server that provides access to Salesforce CRM, Sales Cloud, Service Cloud, and other Salesforce platform services.",
    "authors": [
        "Salesforce, Inc. <support@salesforce.com>"
    ],
    "created_at": "2023-11-15T10:05:00Z",
    "skills": [
        {
            "category_name": "Natural Language Processing",
            "category_uid": 1,
            "class_name": "Text Completion",
            "class_uid": 10201
        },
        {
            "category_name": "Natural Language Processing",
            "category_uid": 1,
            "class_name": "Question Answering",
            "class_uid": 10302
        },
        {
            "category_name": "Natural Language Processing",
            "category_uid": 1,
            "class_name": "Information Retrieval and Synthesis",
            "class_uid": 103
        }
    ],
    "locators": [
        {
            "type": "source-code",
            "url": "https://github.com/salesforce-mcp/salesforce-mcp-server"
        }
    ],
    "extensions": [
        {
            "name": "schema.oasf.agntcy.org/features/runtime/mcp",
            "version": "v1.0.0",
            "data": {
                "servers": {
                    "salesforce": {
                        "command": "docker",
                        "args": [
                            "run",
                            "-i",
                            "--rm",
                            "-e",
                            "SALESFORCE_CLIENT_ID",
                            "-e",
                            "SALESFORCE_CLIENT_SECRET",
                            "-e",
                            "SALESFORCE_USERNAME",
                            "-e",
                            "SALESFORCE_PASSWORD",
                            "-e",
                            "SALESFORCE_INSTANCE_URL",
                            "ghcr.io/salesforce-mcp/salesforce-mcp-server"
                        ],
                        "env": {
                            "SALESFORCE_CLIENT_ID": "${input:SALESFORCE_CLIENT_ID}",
                            "SALESFORCE_CLIENT_SECRET": "${input:SALESFORCE_CLIENT_SECRET}",
                            "SALESFORCE_USERNAME": "${input:SALESFORCE_USERNAME}",
                            "SALESFORCE_PASSWORD": "${input:SALESFORCE_PASSWORD}",
                            "SALESFORCE_INSTANCE_URL": "${input:SALESFORCE_INSTANCE_URL}"
                        }
                    }
                }
            }
        },
        {
            "name": "schema.oasf.agntcy.org/features/runtime/prompt",
            "version": "v1.0.0",
            "data": {
                "prompts": [
                    {
                        "name": "Salesforce CRM Assistant",
                        "description": "Salesforce CRM assistant",
                        "prompt": "You are a Salesforce assistant. Help users manage contacts, opportunities, cases, and other Salesforce CRM objects and workflows."
                    }
                ]
            }
        }
    ]
}
