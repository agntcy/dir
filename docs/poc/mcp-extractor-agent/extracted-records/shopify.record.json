{
    "name": "shopify/shopify-mcp-server",
    "version": "1.0.0",
    "description": "Official Shopify MCP server that provides access to Shopify e-commerce platform, including products, orders, customers, and store management.",
    "authors": [
        "Shopify Inc. <support@shopify.com>"
    ],
    "created_at": "2023-11-22T14:55:00Z",
    "skills": [
        {
            "category_name": "Natural Language Processing",
            "category_uid": 1,
            "class_name": "Text Completion",
            "class_uid": 10201
        },
        {
            "category_name": "Natural Language Processing",
            "category_uid": 1,
            "class_name": "Question Answering",
            "class_uid": 10302
        },
        {
            "category_name": "Natural Language Processing",
            "category_uid": 1,
            "class_name": "Information Retrieval and Synthesis",
            "class_uid": 103
        }
    ],
    "locators": [
        {
            "type": "source-code",
            "url": "https://github.com/shopify/shopify-mcp-server"
        }
    ],
    "extensions": [
        {
            "name": "schema.oasf.agntcy.org/features/runtime/mcp",
            "version": "v1.0.0",
            "data": {
                "servers": {
                    "shopify": {
                        "command": "docker",
                        "args": [
                            "run",
                            "-i",
                            "--rm",
                            "-e",
                            "SHOPIFY_API_KEY",
                            "-e",
                            "SHOPIFY_API_SECRET",
                            "-e",
                            "SHOPIFY_SHOP_DOMAIN",
                            "-e",
                            "SHOPIFY_ACCESS_TOKEN",
                            "ghcr.io/shopify/shopify-mcp-server"
                        ],
                        "env": {
                            "SHOPIFY_API_KEY": "${input:SHOPIFY_API_KEY}",
                            "SHOPIFY_API_SECRET": "${input:SHOPIFY_API_SECRET}",
                            "SHOPIFY_SHOP_DOMAIN": "${input:SHOPIFY_SHOP_DOMAIN}",
                            "SHOPIFY_ACCESS_TOKEN": "${input:SHOPIFY_ACCESS_TOKEN}"
                        }
                    }
                }
            }
        },
        {
            "name": "schema.oasf.agntcy.org/features/runtime/prompt",
            "version": "v1.0.0",
            "data": {
                "prompts": [
                    {
                        "name": "Shopify Store Assistant",
                        "description": "Shopify e-commerce assistant",
                        "prompt": "You are a Shopify assistant. Help users manage products, orders, customers, and other aspects of their Shopify e-commerce store."
                    }
                ]
            }
        }
    ]
}
